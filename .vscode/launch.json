{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Debug NestJS with ts-node-dev",
        "runtimeExecutable": "yarn",
        "runtimeArgs": [
          "ts-node-dev",
          "--respawn",
          "--transpile-only",
          "--inspect",
          "--",
          "${workspaceFolder}/src/main.ts"
        ],
        "restart": true,
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen"
      }
    ]
  }
  